# Example environment file for MediBot (copy to backend/.env and fill in)

# AI / NLP
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-2.5-flash
HUGGINGFACE_TOKEN=your-huggingface-token
HUGGINGFACE_API_KEY=your-huggingface-token
BIOBERT_MODEL_NAME=d4data/biobert_ner
AI_EXPLANATION_ENABLED=true
REDIS_URL=redis://redis:6379/0
REDIS_PREFIX=medibot

# Auth
JWT_SECRET=change-me
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Database
DATABASE_URL=postgresql+psycopg2://medibot:medibot@db:5432/medibot
SQL_ECHO=false

# Demo seed user (used to bootstrap a test account)
DEMO_USER_EMAIL=demo@example.com
DEMO_USER_PASSWORD=demo123
DEMO_USER_NAME=Demo User

# File uploads
UPLOAD_ROOT=./backend/uploads
MAX_FILE_MB=10

# Server
PORT=8000
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,https://medibot-ready.vercel.app
